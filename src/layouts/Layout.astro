---
import "../styles/main.scss";
const { title = "Fotos del Evento" } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Mauro Gigena</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <header class="navbar navbar-expand-lg sticky">
      <div class="container-fluid">
        <a class="navbar-brand text-uppercase fw-bold text-white" href="/"
          >Mauro Gigena Fotografía</a
        >
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="#">Inicio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Galería</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="https://wa.me/TUNUMERO" target="_blank"
                >Contacto</a
              >
            </li>
          </ul>
        </div>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>
