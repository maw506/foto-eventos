---
const fotos = Array.from({ length: 12 }, (_, i) => `evento${String(i + 1).padStart(3, '0')}.jpg`);
---

<section class="galeria">
  {fotos.map((foto) => (
    <div class="foto-card">
      <img src={`/fotos/${foto}`} alt={`Foto ${foto}`} />
      <button>Seleccionar</button>
    </div>
  ))}

  <div class="galeria-footer">
    <button class="enviar">Enviar por WhatsApp</button>
  </div>
</section>

<style>
  .galeria {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    gap: 1rem;
    padding: 2rem;
  }

  .foto-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #f9f9f9;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    padding: 0.5rem;
  }

  .foto-card img {
    width: 100%;
    height: auto;
    border-radius: 6px;
    object-fit: cover;
  }

  .foto-card button {
    margin-top: 0.5rem;
    padding: 0.4rem 0.8rem;
    background: #0077cc;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .galeria-footer {
    grid-column: 1 / -1;
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }

  .enviar {
    padding: 0.8rem 1.6rem;
    background: #25D366;
    color: white;
    font-weight: bold;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    cursor: pointer;
  }
</style>
